<div>
  <ul class='letters_grid'>
    <% @letters.each do |letter| %>
      <li><%= letter %></li>
    <% end %>
  </ul>
</div>

<form action="/score" method="POST">
  <p>What is the longest word you can find?</p>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="Typer your word here">
  <input type="hidden" name="grid" value="<%= @letters.join(' ') %>" />
  <input type="submit" name="try" id="submit" value="Submit word!">
</form>
